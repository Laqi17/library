<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-mapping>
    <class name="ua.goit.model.dao.BookDao" table="book" catalog="goit_library" schema="public">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="increment">
                <param name="sequence">book_id_seq</param>
            </generator>
        </id>
        <property name="name" type="java.lang.String">
            <column name="name" length="1000"/>
        </property>
        <property name="countPages" type="java.lang.Integer">
            <column name="count_pages"/>
        </property>
        <set name="authors" table="book_author" cascade="save-update">
            <key column="book_id"/>
            <many-to-many column="author_id" class="ua.goit.model.dao.AuthorDao"/>
        </set>
    </class>
</hibernate-mapping>