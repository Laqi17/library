<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-mapping>
    <class name="ua.goit.model.dao.AuthorDao" table="author" catalog="goit_library" schema="public">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="increment">
                <param name="sequence">author_id_seq</param>
            </generator>
        </id>
        <property name="firstName" type="java.lang.String">
            <column name="first_name" length="1000"/>
        </property>
        <property name="lastName" type="java.lang.String">
            <column name="last_name" length="1000"/>
        </property>
        <property name="email" type="java.lang.String">
            <column name="email" length="1000"/>
        </property>
        <set name="books" table="book_author" inverse="true">
            <key column="author_id"/>
            <many-to-many column="book_id" class="ua.goit.model.dao.BookDao"/>
        </set>
    </class>
</hibernate-mapping>